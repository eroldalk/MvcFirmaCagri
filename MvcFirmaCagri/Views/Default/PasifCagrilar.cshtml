@using MvcFirmaCagri.Models.entity
@model List<TBLCagrilar>
@{
    ViewBag.Title = "PasifCagrilar";
    Layout = "~/Views/Shared/FirmaLayout.cshtml";
}



<div class="main-content p-5">
    <br />
    <br />
    <br />
    <h1> Pasif Çağrıları</h1>
    <br />
    <br />
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Konu</th>
            <th>Tarih</th>
            <th>Detaylar</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.ID</td>
                <td>@x.Konu</td>
                <td>@x.Tarih</td>
                <td><a href="/Default/CagriDetay/@x.ID/" class="btn btn-info">Detaylar</a></td>
            </tr>
        }
    </table>
    <td><a href="/Default/YeniCagri/" class="btn btn-primary">Yeni Çağrı Ekleme</a></td>

</div>